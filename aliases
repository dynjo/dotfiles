# Todo
alias todo='$EDITOR ~/.todo'

# Unix
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

# git
alias git=hub
alias gs="git status"
alias gco="git checkout"
alias show="git browse"
alias gl="git lg"

# Bundler
alias b="bundle install"

# iPhone simulator
alias sim='open /Applications/Xcode.app/Contents/Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app'
